const express = require('express');
const router = express.Router();
const multer = require('multer');
const bomController = require('../controllers/bomController');
const { validateBomCreate, validateBomNode } = require('../middleware/validation');
const auth = require('../middleware/auth');

// 文件上传配置
const upload = multer({
  dest: 'uploads/',
  limits: { fileSize: 10 * 1024 * 1024 }, // 10MB限制
  fileFilter: (req, file, cb) => {
    if (file.mimetype === 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet' ||
        file.mimetype === 'application/vnd.ms-excel') {
      cb(null, true);
    } else {
      cb(new Error('只支持Excel文件'), false);
    }
  }
});

// 需要认证的路由
router.use(auth);

// BOM实例路由
router.post('/', validateBomCreate, bomController.createBomInstance);
router.get('/', bomController.getBomList);
router.get('/:id', bomController.getBomDetail);
router.put('/:id/status', bomController.updateBomStatus);
router.post('/:id/clone', bomController.cloneBom);
router.get('/:id/export', bomController.exportBomToExcel);
router.get('/:id/tree', bomController.generateBomTreeData);

// BOM节点路由
router.post('/:bom_instance_id/nodes', validateBomNode, bomController.addBomNode);
router.put('/nodes/:node_id', bomController.updateBomNode);
router.delete('/nodes/:node_id', bomController.deleteBomNode);

// 导入导出
router.post('/:bom_instance_id/import', upload.single('file'), bomController.importBomFromExcel);

// 统计和分析
router.get('/:id/statistics', bomController.getBomStatistics);
router.get('/:id/cost-calculation', bomController.calculateBomCost);
router.get('/search/product/:product_code', bomController.searchProductInBom);

module.exports = router;