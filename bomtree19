const { DataTypes } = require('sequelize');
const sequelize = require('../../config/database');
const BomInstance = require('./BomInstance');
const Product = require('./Product');
const Process = require('./Process');

const BomNode = sequelize.define('BomNode', {
  id: {
    type: DataTypes.INTEGER,
    primaryKey: true,
    autoIncrement: true
  },
  bom_instance_id: {
    type: DataTypes.INTEGER,
    allowNull: false,
    comment: 'BOM实例ID'
  },
  node_address: {
    type: DataTypes.STRING(20),
    allowNull: false,
    comment: '节点地址(L0, L1-1等)'
  },
  product_id: {
    type: DataTypes.INTEGER,
    allowNull: false,
    comment: '产品ID'
  },
  process_id: {
    type: DataTypes.INTEGER,
    comment: '工序ID'
  },
  parent_node_id: {
    type: DataTypes.INTEGER,
    comment: '父节点ID'
  },
  quantity: {
    type: DataTypes.DECIMAL(12, 4),
    allowNull: false,
    defaultValue: 1,
    comment: '数量'
  },
  scrap_rate: {
    type: DataTypes.DECIMAL(5, 2),
    defaultValue: 0,
    comment: '损耗率(%)'
  },
  unit_cost: {
    type: DataTypes.DECIMAL(15, 4),
    comment: '单位成本'
  },
  total_cost: {
    type: DataTypes.DECIMAL(15, 4),
    comment: '总成本'
  },
  lead_time: {
    type: DataTypes.INTEGER,
    comment: '提前期(天)'
  },
  sort_order: {
    type: DataTypes.INTEGER,
    defaultValue: 0,
    comment: '排序'
  },
  level: {
    type: DataTypes.INTEGER,
    allowNull: false,
    comment: '层级'
  },
  is_leaf: {
    type: DataTypes.BOOLEAN,
    defaultValue: false,
    comment: '是否叶节点'
  },
  attributes: {
    type: DataTypes.JSON,
    comment: '扩展属性'
  }
}, {
  tableName: 'bom_nodes',
  timestamps: true,
  comment: 'BOM节点关系表',
  indexes: [
    {
      fields: ['bom_instance_id']
    },
    {
      fields: ['node_address']
    },
    {
      fields: ['parent_node_id']
    },
    {
      fields: ['level']
    }
  ]
});

// 关联关系
BomNode.belongsTo(BomInstance, { foreignKey: 'bom_instance_id' });
BomNode.belongsTo(Product, { foreignKey: 'product_id' });
BomNode.belongsTo(Process, { foreignKey: 'process_id' });
BomNode.belongsTo(BomNode, { 
  as: 'parent', 
  foreignKey: 'parent_node_id' 
});
BomNode.hasMany(BomNode, {
  as: 'children',
  foreignKey: 'parent_node_id'
});

module.exports = BomNode;